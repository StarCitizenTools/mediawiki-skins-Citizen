{
	"root": true,
	"extends": [
		"wikimedia/common",
		"wikimedia/node"
	],
	"globals": {
		"Badge": "readonly"
	},
	"overrides": [
		{
			"files": [ "**/*.ts" ],
			"parser": "@typescript-eslint/parser",
			"plugins": [ "@typescript-eslint" ],
			"extends": [
				"wikimedia/common",
				"wikimedia/node"
			],
			"rules": {
				"strict": "off"
			}
		},
		{
			"files": [ "**/*.ts", "**/*.vue" ],
			"rules": {
				"n/no-missing-import": "off"
			}
		},
		{
			"files": [ "*.vue" ],
			"parser": "vue-eslint-parser",
			"parserOptions": {
				"parser": "@typescript-eslint/parser"
			}
		}
	]
}
