<div class="citizen-userInfo">
	<div class="citizen-userInfo-title">
		{{#title}}<div>{{.}}</div>{{/title}}
		{{#data-user-page}}{{>Menu}}{{/data-user-page}}
	</div>
	<div class="citizen-userInfo-text">
		{{#text}}<div>{{.}}</div>{{/text}}
		{{#data-user-groups}}
			<ul class="citizen-userInfo-usergroups">
					{{#array-list-items}}{{>MenuListItem}}{{/array-list-items}}
			</ul>
		{{/data-user-groups}}
	</div>
	{{#data-user-stats}}
		<div class="citizen-userInfo-stats">
			{{#array-stats-items}}
				<div class="citizen-userInfo-stats-item">
					<div class="citizen-userInfo-stats-item-label">{{label}}</div>
					<div class="citizen-userInfo-stats-item-value">{{{value}}}</div>
				</div>
			{{/array-stats-items}}
		</div>
	{{/data-user-stats}}
</div>