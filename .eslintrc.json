{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"require": "readonly",
		"module": "readonly"
	},
	"rules": {
		"one-var": "off",
		"//": [
			"off",
			"ResourceLoader's `packageFiles` do not require wrapping but the `module` option is only available in ES6+."
		],
		"no-implicit-globals": "off"
	}
}
